@model IEnumerable<DatabaseAccess.tblUserType>

@{
    ViewBag.Title = "User Types";
}

<p>
    @Html.ActionLink("Create New User Type", "Create", null, new { @class = "btn btn-primary mb-3" })
</p>

<div class="card">
    <div class="card-header">
        <input type="text" id="searchInput" class="form-control" placeholder="Search for user types..." />
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.UserType)
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody id="userTypeList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserType)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.UserTypeID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.UserTypeID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.UserTypeID })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Arama kutusuna her harf girildiğinde bu fonksiyon çalışır
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                // Tablo satırları arasında filtreleme yap
                $("#userTypeList tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}