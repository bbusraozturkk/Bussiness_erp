@model DatabaseAccess.tblCompany

@{
    ViewBag.Title = "Company Information";
}

<div class="container-fluid">

    <h2 class="mb-4">Company Information</h2>

    <div class="card">
        <div class="card-body">

            <div class="row">

                <div class="col-md-4 col-lg-3 text-center">
                    @if (!string.IsNullOrEmpty(Model.Logo))
                    {
                        <img src="@Url.Content(Model.Logo)" alt="@Model.Name Logo" class="img-fluid rounded" style="max-height: 250px;" />
                    }
                    else
                    {
                        <div class="d-flex align-items-center justify-content-center border rounded" style="height: 200px; width: 100%;">
                            <span>No Image Available</span>
                        </div>
                    }
                </div>

                <div class="col-md-8 col-lg-9">

                    @Html.ActionLink("Edit Profile", "Edit", "tblCompanies", new { id = Model.CompanyID }, new { @class = "btn btn-primary float-right" })

                    <h2 class="card-title" style="margin-top: 10px;">
                        @Html.DisplayFor(model => model.Name)
                    </h2>

                    <h4 class="card-subtitle mb-3 text-muted">
                        @Html.DisplayFor(model => model.Name)
                    </h4>

                </div>
            </div>

            <hr />

            <p>

                @Html.ActionLink("Edit", "Edit", new { id = Model.CompanyID }) |

                @Html.ActionLink("Back to List", "Index")

            </p>

        </div>
    </div>
</div>